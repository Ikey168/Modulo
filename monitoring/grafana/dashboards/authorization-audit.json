{
  "dashboard": {
    "id": null,
    "title": "Authorization Audit & Decision Tracing",
    "tags": ["security", "audit", "authorization", "opa"],
    "style": "dark",
    "timezone": "browser",
    "refresh": "30s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "Authorization Decisions Overview",
        "type": "stat",
        "gridPos": {"x": 0, "y": 0, "w": 12, "h": 4},
        "targets": [
          {
            "expr": "sum(rate(opa_decisions_total[5m])) by (decision)",
            "legendFormat": "{{decision}}",
            "refId": "A"
          }
        ],
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "orientation": "horizontal",
          "textMode": "auto",
          "colorMode": "background",
          "graphMode": "area",
          "justifyMode": "center"
        },
        "fieldConfig": {
          "defaults": {
            "mappings": [],
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "red", "value": 0.1}
              ]
            },
            "unit": "reqps"
          }
        }
      },
      {
        "id": 2,
        "title": "Denial Rate by Resource Type",
        "type": "piechart",
        "gridPos": {"x": 12, "y": 0, "w": 12, "h": 4},
        "targets": [
          {
            "expr": "sum(rate(opa_denied_requests_total[5m])) by (resource_type)",
            "legendFormat": "{{resource_type}}",
            "refId": "A"
          }
        ],
        "options": {
          "pieType": "donut",
          "displayLabels": ["name", "value"]
        }
      },
      {
        "id": 3,
        "title": "Recent Denied Requests",
        "type": "logs",
        "gridPos": {"x": 0, "y": 4, "w": 24, "h": 8},
        "targets": [
          {
            "expr": "{service=\"opa-audit\", decision=\"false\"} |= \"AUDIT\" | json | line_format \"{{.timestamp}} {{.user.username}} DENIED {{.request.action}} {{.request.resource_type}}:{{.request.resource_id}} - {{.decision.reason}}\"",
            "refId": "A"
          }
        ],
        "options": {
          "showTime": true,
          "showLabels": false,
          "showCommonLabels": false,
          "wrapLogMessage": true,
          "sortOrder": "Descending"
        }
      },
      {
        "id": 4,
        "title": "Top Denied Actions by Resource Type (Last Hour)",
        "type": "bargauge", 
        "gridPos": {"x": 0, "y": 12, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "topk(10, sum(increase(opa_denied_requests_total[1h])) by (resource_type, action))",
            "legendFormat": "{{resource_type}}:{{action}}",
            "refId": "A"
          }
        ],
        "options": {
          "orientation": "horizontal",
          "displayMode": "gradient",
          "showUnfilled": true
        },
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 5},
                {"color": "red", "value": 10}
              ]
            }
          }
        }
      },
      {
        "id": 5,
        "title": "Decision Evaluation Time Distribution",
        "type": "histogram",
        "gridPos": {"x": 12, "y": 12, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "histogram_quantile(0.50, sum(rate(opa_decision_duration_ms_bucket[5m])) by (le, resource_type))",
            "legendFormat": "50th percentile - {{resource_type}}",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.95, sum(rate(opa_decision_duration_ms_bucket[5m])) by (le, resource_type))",
            "legendFormat": "95th percentile - {{resource_type}}",
            "refId": "B"
          },
          {
            "expr": "histogram_quantile(0.99, sum(rate(opa_decision_duration_ms_bucket[5m])) by (le, resource_type))",
            "legendFormat": "99th percentile - {{resource_type}}",
            "refId": "C"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "ms",
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 50},
                {"color": "red", "value": 100}
              ]
            }
          }
        }
      },
      {
        "id": 6,
        "title": "Authorization Decisions by User (Top 20)",
        "type": "table",
        "gridPos": {"x": 0, "y": 20, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "topk(20, sum(rate(opa_decisions_total[1h])) by (user_id, tenant))",
            "format": "table",
            "instant": true,
            "refId": "A"
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {
                "Time": true,
                "__name__": true,
                "job": true,
                "instance": true
              },
              "indexByName": {},
              "renameByName": {
                "user_id": "User ID",
                "tenant": "Tenant",
                "Value": "Requests/Hour"
              }
            }
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "align": "auto",
              "displayMode": "auto"
            },
            "mappings": [],
            "thresholds": {
              "steps": [
                {"color": "green", "value": null}
              ]
            }
          }
        }
      },
      {
        "id": 7,
        "title": "Denied Requests by Reason Category",
        "type": "piechart",
        "gridPos": {"x": 12, "y": 20, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "sum(rate(opa_denied_requests_total[1h])) by (reason_category)",
            "legendFormat": "{{reason_category}}",
            "refId": "A"
          }
        ],
        "options": {
          "pieType": "pie",
          "displayLabels": ["name", "percent"]
        }
      },
      {
        "id": 8,
        "title": "Decision Correlation with Traces",
        "type": "traces",
        "gridPos": {"x": 0, "y": 28, "w": 24, "h": 8},
        "targets": [
          {
            "query": "service.name=\"modulo-authorization\" AND authz.decision=\"deny\"",
            "queryType": "",
            "refId": "A"
          }
        ],
        "datasource": {
          "type": "jaeger",
          "uid": "jaeger"
        }
      },
      {
        "id": 9,
        "title": "Suspicious Activity Alerts",
        "type": "logs",
        "gridPos": {"x": 0, "y": 36, "w": 24, "h": 6},
        "targets": [
          {
            "expr": "{service=\"opa-audit\"} |= \"ALERT\" | json | line_format \"ðŸš¨ ALERT: {{.message}}\"",
            "refId": "A"
          }
        ],
        "options": {
          "showTime": true,
          "showLabels": true,
          "showCommonLabels": false,
          "wrapLogMessage": true,
          "sortOrder": "Descending"
        },
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "custom": {
              "hideFrom": {
                "legend": false,
                "tooltip": false,
                "vis": false
              }
            }
          }
        }
      },
      {
        "id": 10,
        "title": "Decision Volume Timeline",
        "type": "timeseries",
        "gridPos": {"x": 0, "y": 42, "w": 24, "h": 6},
        "targets": [
          {
            "expr": "sum(rate(opa_decisions_total[1m])) by (decision)",
            "legendFormat": "{{decision}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "linear",
              "barAlignment": 0,
              "lineWidth": 2,
              "fillOpacity": 20,
              "gradientMode": "none",
              "spanNulls": false,
              "insertNulls": false,
              "showPoints": "never",
              "pointSize": 5,
              "stacking": {
                "mode": "none",
                "group": "A"
              },
              "axisPlacement": "auto",
              "axisLabel": "",
              "scaleDistribution": {
                "type": "linear"
              },
              "hideFrom": {
                "legend": false,
                "tooltip": false,
                "vis": false
              },
              "thresholdsStyle": {
                "mode": "off"
              }
            },
            "unit": "reqps",
            "min": 0
          }
        }
      }
    ],
    "templating": {
      "list": [
        {
          "name": "tenant",
          "type": "query",
          "query": "label_values(opa_decisions_total, tenant)",
          "refresh": 1,
          "includeAll": true,
          "multi": true,
          "allValue": null,
          "current": {
            "selected": false,
            "text": "All",
            "value": "$__all"
          },
          "datasource": {
            "type": "prometheus",
            "uid": "prometheus"
          }
        },
        {
          "name": "resource_type",
          "type": "query",
          "query": "label_values(opa_decisions_total{tenant=~\"$tenant\"}, resource_type)",
          "refresh": 1,
          "includeAll": true,
          "multi": true,
          "allValue": null,
          "current": {
            "selected": false,
            "text": "All",
            "value": "$__all"
          },
          "datasource": {
            "type": "prometheus",
            "uid": "prometheus"
          }
        }
      ]
    },
    "annotations": {
      "list": [
        {
          "name": "Policy Changes",
          "datasource": {
            "type": "loki",
            "uid": "loki"
          },
          "enable": true,
          "iconColor": "red",
          "query": "{service=\"opa-bundle\"} |= \"policy_updated\"",
          "textFormat": "Policy Update: {{bundle_name}}",
          "titleFormat": "Policy Change"
        },
        {
          "name": "High Denial Rate",
          "datasource": {
            "type": "prometheus",
            "uid": "prometheus"
          },
          "enable": true,
          "iconColor": "yellow",
          "expr": "rate(opa_denied_requests_total[5m]) > 0.1",
          "textFormat": "High denial rate detected",
          "titleFormat": "Security Alert"
        }
      ]
    }
  }
}
