# Environment Variables for Smart Contract Development

# Network Configuration
SEPOLIA_URL=https://eth-sepolia.g.alchemy.com/v2/YOUR_ALCHEMY_API_KEY
MAINNET_URL=https://eth-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_API_KEY

# Polygon Network Configuration
POLYGON_URL=https://polygon-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_API_KEY
MUMBAI_URL=https://polygon-mumbai.g.alchemy.com/v2/YOUR_ALCHEMY_API_KEY

# Alternative Polygon RPC URLs (if Alchemy not available)
# POLYGON_URL=https://polygon-rpc.com/
# MUMBAI_URL=https://rpc-mumbai.maticvigil.com/

# Private Key (DO NOT COMMIT TO VERSION CONTROL)
# Use a dedicated deployment wallet with minimal funds
PRIVATE_KEY=your_private_key_here

# API Keys for contract verification
ETHERSCAN_API_KEY=your_etherscan_api_key_here
POLYGONSCAN_API_KEY=your_polygonscan_api_key_here

# Gas Reporting
REPORT_GAS=false

# Deployed Contract Addresses (update after deployment)
CONTRACT_ADDRESS_LOCALHOST=
CONTRACT_ADDRESS_SEPOLIA=
CONTRACT_ADDRESS_MUMBAI=
CONTRACT_ADDRESS_POLYGON=
CONTRACT_ADDRESS_MAINNET=

# Coinmarketcap API Key (for gas reporting in USD)
COINMARKETCAP_API_KEY=your_coinmarketcap_api_key_here
