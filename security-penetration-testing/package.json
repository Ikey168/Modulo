{
  "name": "@modulo/security-penetration-testing",
  "version": "1.0.0",
  "description": "Comprehensive security penetration testing framework for Modulo platform",
  "main": "index.js",
  "private": true,
  "scripts": {
    "test": "npm run test:security:all",
    "test:security:all": "npm run test:owasp && npm run test:injection && npm run test:auth && npm run test:network && npm run test:api",
    "test:owasp": "node tests/owasp-top-10/owasp-test-runner.js",
    "test:injection": "node tests/injection/injection-test-runner.js",
    "test:auth": "node tests/authentication/auth-security-test.js",
    "test:network": "node tests/network/network-security-test.js",
    "test:api": "node tests/api/api-security-test.js",
    "test:sast": "npm run test:sonar && npm run test:snyk",
    "test:dast": "node tests/dynamic/dast-test-runner.js",
    "test:sonar": "sonar-scanner -Dsonar.projectKey=modulo-security -Dsonar.sources=. -Dsonar.host.url=http://localhost:9000",
    "test:snyk": "snyk test --severity-threshold=high",
    "test:zap": "node tests/zap/zap-security-scan.js",
    "test:custom": "node tests/custom/custom-security-tests.js",
    "report:generate": "node scripts/generate-security-report.js",
    "report:html": "node scripts/generate-html-report.js",
    "report:json": "node scripts/generate-json-report.js",
    "setup": "node scripts/setup-security-testing.js",
    "validate": "node scripts/validate-security-config.js"
  },
  "keywords": [
    "security",
    "penetration testing",
    "vulnerability assessment",
    "OWASP",
    "SAST",
    "DAST",
    "security testing",
    "automated security"
  ],
  "dependencies": {
    "axios": "^1.6.0",
    "cheerio": "^1.0.0-rc.12",
    "puppeteer": "^21.5.0",
    "express": "^4.18.0",
    "helmet": "^7.1.0",
    "cors": "^2.8.5",
    "jsonwebtoken": "^9.0.2",
    "bcrypt": "^5.1.1",
    "uuid": "^9.0.1",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "chalk": "^4.1.2",
    "cli-progress": "^3.12.0",
    "commander": "^11.1.0",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@types/node": "^20.8.0",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.52.0",
    "eslint-plugin-security": "^1.7.1",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Ikey168/Modulo.git"
  },
  "author": "Modulo Security Team",
  "license": "MIT",
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.js",
      "**/tests/**/*.spec.js"
    ],
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html",
      "json"
    ],
    "collectCoverageFrom": [
      "tests/**/*.js",
      "scripts/**/*.js",
      "!**/node_modules/**",
      "!**/coverage/**"
    ]
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended"
    ],
    "plugins": [
      "security"
    ],
    "env": {
      "node": true,
      "es2021": true,
      "jest": true
    },
    "rules": {
      "security/detect-sql-injection": "error",
      "security/detect-buffer-noassert": "error",
      "security/detect-child-process": "warn",
      "security/detect-disable-mustache-escape": "error",
      "security/detect-eval-with-expression": "error",
      "security/detect-no-csrf-before-method-override": "error",
      "security/detect-non-literal-fs-filename": "warn",
      "security/detect-non-literal-regexp": "error",
      "security/detect-non-literal-require": "warn",
      "security/detect-object-injection": "warn",
      "security/detect-possible-timing-attacks": "warn",
      "security/detect-pseudoRandomBytes": "error",
      "security/detect-unsafe-regex": "error"
    }
  },
  "config": {
    "testTimeout": 30000,
    "maxConcurrentTests": 5,
    "retryFailedTests": 3,
    "securityThresholds": {
      "overall": 85,
      "authentication": 90,
      "authorization": 90,
      "injection": 95,
      "encryption": 90,
      "configuration": 80
    }
  }
}
