{
  "dashboard": {
    "id": null,
    "title": "Modulo - Sync & Blockchain",
    "tags": ["modulo", "sync", "blockchain", "websocket"],
    "style": "dark",
    "timezone": "browser",
    "editable": true,
    "graphTooltip": 1,
    "panels": [
      {
        "id": 1,
        "title": "üîó Blockchain & Sync Overview",
        "type": "row",
        "gridPos": {"h": 1, "w": 24, "x": 0, "y": 0},
        "collapsed": false
      },
      {
        "id": 2,
        "title": "Blockchain Transactions",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(rate(modulo_blockchain_transactions_total[5m]))",
            "legendFormat": "Tx/sec",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "custom": {"displayMode": "basic"},
            "unit": "ops",
            "min": 0
          }
        },
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "orientation": "auto",
          "textMode": "auto",
          "colorMode": "value",
          "graphMode": "area",
          "justifyMode": "auto"
        },
        "gridPos": {"h": 8, "w": 6, "x": 0, "y": 1}
      },
      {
        "id": 3,
        "title": "WebSocket Connections",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(modulo_websocket_connections_total)",
            "legendFormat": "Active",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "custom": {"displayMode": "basic"},
            "unit": "short",
            "min": 0
          }
        },
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "orientation": "auto",
          "textMode": "auto",
          "colorMode": "value",
          "graphMode": "area",
          "justifyMode": "auto"
        },
        "gridPos": {"h": 8, "w": 6, "x": 6, "y": 1}
      },
      {
        "id": 4,
        "title": "Sync Operations",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(rate(modulo_sync_operations_total[5m]))",
            "legendFormat": "Syncs/sec",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "custom": {"displayMode": "basic"},
            "unit": "ops",
            "min": 0
          }
        },
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "orientation": "auto",
          "textMode": "auto",
          "colorMode": "value",
          "graphMode": "area",
          "justifyMode": "auto"
        },
        "gridPos": {"h": 8, "w": 6, "x": 12, "y": 1}
      },
      {
        "id": 5,
        "title": "Network Status",
        "type": "stat",
        "targets": [
          {
            "expr": "modulo_network_connected",
            "legendFormat": "Connected",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "custom": {"displayMode": "basic"},
            "unit": "short",
            "min": 0,
            "max": 1,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "red", "value": null},
                {"color": "green", "value": 1}
              ]
            }
          }
        },
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "orientation": "auto",
          "textMode": "auto",
          "colorMode": "value",
          "graphMode": "none",
          "justifyMode": "auto"
        },
        "gridPos": {"h": 8, "w": 6, "x": 18, "y": 1}
      },
      {
        "id": 10,
        "title": "üåê WebSocket Metrics",
        "type": "row",
        "gridPos": {"h": 1, "w": 24, "x": 0, "y": 9},
        "collapsed": false
      },
      {
        "id": 11,
        "title": "WebSocket Connection Activity",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(modulo_websocket_connections_total)",
            "legendFormat": "Active Connections",
            "refId": "A"
          },
          {
            "expr": "rate(modulo_websocket_connections_opened_total[5m])",
            "legendFormat": "Connections Opened/sec",
            "refId": "B"
          },
          {
            "expr": "rate(modulo_websocket_connections_closed_total[5m])",
            "legendFormat": "Connections Closed/sec",
            "refId": "C"
          }
        ],
        "yAxes": [
          {"label": "Count", "min": 0},
          {"show": false}
        ],
        "xAxis": {"show": true},
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 10}
      },
      {
        "id": 12,
        "title": "WebSocket Message Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(modulo_websocket_messages_sent_total[5m])",
            "legendFormat": "Messages Sent/sec",
            "refId": "A"
          },
          {
            "expr": "rate(modulo_websocket_messages_received_total[5m])",
            "legendFormat": "Messages Received/sec",
            "refId": "B"
          }
        ],
        "yAxes": [
          {"label": "Messages/sec", "min": 0},
          {"show": false}
        ],
        "xAxis": {"show": true},
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 10}
      },
      {
        "id": 20,
        "title": "‚õìÔ∏è Blockchain Metrics",
        "type": "row",
        "gridPos": {"h": 1, "w": 24, "x": 0, "y": 18},
        "collapsed": false
      },
      {
        "id": 21,
        "title": "Blockchain Transaction Types",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(modulo_blockchain_transactions_total[5m])) by (type)",
            "legendFormat": "{{ type }}",
            "refId": "A"
          }
        ],
        "yAxes": [
          {"label": "Transactions/sec", "min": 0},
          {"show": false}
        ],
        "xAxis": {"show": true},
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 19}
      },
      {
        "id": 22,
        "title": "Blockchain Response Times",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.50, sum(rate(modulo_blockchain_operation_duration_seconds_bucket[5m])) by (le)) * 1000",
            "legendFormat": "50th percentile",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.95, sum(rate(modulo_blockchain_operation_duration_seconds_bucket[5m])) by (le)) * 1000",
            "legendFormat": "95th percentile",
            "refId": "B"
          },
          {
            "expr": "histogram_quantile(0.99, sum(rate(modulo_blockchain_operation_duration_seconds_bucket[5m])) by (le)) * 1000",
            "legendFormat": "99th percentile",
            "refId": "C"
          }
        ],
        "yAxes": [
          {"label": "Duration (ms)", "min": 0},
          {"show": false}
        ],
        "xAxis": {"show": true},
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 19}
      },
      {
        "id": 30,
        "title": "üîÑ Synchronization",
        "type": "row",
        "gridPos": {"h": 1, "w": 24, "x": 0, "y": 27},
        "collapsed": false
      },
      {
        "id": 31,
        "title": "Sync Operation Status",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(modulo_sync_operations_total[5m])) by (status)",
            "legendFormat": "{{ status }}",
            "refId": "A"
          }
        ],
        "yAxes": [
          {"label": "Operations/sec", "min": 0},
          {"show": false}
        ],
        "xAxis": {"show": true},
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 28}
      },
      {
        "id": 32,
        "title": "Offline Storage Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "modulo_offline_storage_entries_total",
            "legendFormat": "Offline Entries",
            "refId": "A"
          },
          {
            "expr": "modulo_offline_storage_size_bytes",
            "legendFormat": "Storage Size (bytes)",
            "refId": "B"
          }
        ],
        "yAxes": [
          {"label": "Count / Bytes", "min": 0},
          {"show": false}
        ],
        "xAxis": {"show": true},
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 28}
      }
    ],
    "time": {"from": "now-1h", "to": "now"},
    "timepicker": {
      "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m", "30m", "1h", "2h", "1d"]
    },
    "refresh": "10s"
  }
}
