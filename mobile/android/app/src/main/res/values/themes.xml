<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    
    <!-- Base application theme -->
    <style name="Base.Theme.Modulo" parent="Theme.Material3.DayNight">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/md_theme_light_primary</item>
        <item name="colorOnPrimary">@color/md_theme_light_onPrimary</item>
        <item name="colorPrimaryContainer">@color/md_theme_light_primaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/md_theme_light_onPrimaryContainer</item>
        
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/md_theme_light_secondary</item>
        <item name="colorOnSecondary">@color/md_theme_light_onSecondary</item>
        <item name="colorSecondaryContainer">@color/md_theme_light_secondaryContainer</item>
        <item name="colorOnSecondaryContainer">@color/md_theme_light_onSecondaryContainer</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">@color/md_theme_light_background</item>
        <item name="colorSurface">@color/md_theme_light_surface</item>
        <item name="colorOnSurface">@color/md_theme_light_onSurface</item>
        
        <!-- Status bar -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>
    
    <style name="Theme.Modulo" parent="Base.Theme.Modulo" />
    
    <!-- Theme with no action bar -->
    <style name="Theme.Modulo.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    
    <!-- App bar theme -->
    <style name="Theme.Modulo.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.Modulo.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    
    <!-- FAB style -->
    <style name="FloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="tint">?attr/colorOnPrimary</item>
    </style>
    
    <!-- Card style -->
    <style name="NoteCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">2dp</item>
        <item name="cardUseCompatPadding">true</item>
    </style>
    
    <!-- Text styles -->
    <style name="TextAppearance.Modulo.Headline6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">sans-serif-medium</item>
    </style>
    
    <style name="TextAppearance.Modulo.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>
    
    <!-- Button styles -->
    <style name="Button.Modulo" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>
    
    <style name="Button.Modulo.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>
    
    <!-- Input field styles -->
    <style name="TextInputLayout.Modulo" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">?attr/colorPrimary</item>
        <item name="hintTextColor">?attr/colorPrimary</item>
    </style>
</resources>
